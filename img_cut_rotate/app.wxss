/*搜索栏*/
.zan-search {
    height: 48px;
    padding: 0 16px;
    background: #f2f2f2;
    box-sizing: border-box;
    display: -webkit-box;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
}

.zan-search.center-placeholder {
    background: #fff;
}

.zan-search.center-placeholder .zan-search__form {
    margin-left: 50%;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    border: none;
}

.zan-search.zan-cell::after {
    display: none;
}

.zan-search__form {
    display: -webkit-box;
    display: flex;
    -webkit-box-flex: 1;
    flex: 1;
    background: #fff;
    line-height: 56rpx;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    height: 30px;
    border-radius: 4px;
}

.zan-search__form input {
    height: 100%;
    -webkit-box-flex: 1;
    flex: 1;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: #333;
}

.zan-search__form icon {
    margin-left: 20rpx;
    line-height: 1;
}

.zan-search__clear {
    padding: 12rpx 20rpx;
}

.zan-search__placeholder {
    font-size: 28rpx;
    color: #cacaca;
}

.zan-search__cancel {
    align-self: stretch;
    display: -webkit-inline-box;
    display: inline-flex;
    -webkit-box-align: center;
    align-items: center;
    padding-left: 30rpx;
    font-size: 28rpx;
    color: #38f;
}

/*checkbox 样式重置*/
checkbox {
    transform: scale(0.8);
    vertical-align: top;
    width: 50rpx;
    height: 50rpx;
    line-height:20rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border: none;
    background: #007aff;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
    color: #fff;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 30rpx;
}




