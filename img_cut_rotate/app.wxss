/*搜索栏*/

.searchbar {
    background: #007AFF;
    overflow: hidden;
    padding: 8px 10px;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.searchbar .iconfont {
    position: absolute;
    font-size: 0.8rem;
    color: #b4b4b4;
    top: 50%;
    left: 0.3rem;
    -webkit-transform: translate3D(0, -50%, 0);
    transform: translate3D(0, -50%, 0);
}

.search-input {
    position: relative;
}

.search-input input {
    box-sizing: border-box;
    width: 100%;
    height: 30px;
    display: block;
    border: none;
    border-radius: 6px;
    font-family: inherit;
    color: #3d4145;
    font-size: 14px;
    font-weight: normal;
    padding: 0 17px 0 30px;
    background-color: #f5f5f5;
}

.searchbar.searchbar-active .searchbar-cancel + .search-input {
    margin-right: 50px;
}

.search-input .sinput {
    box-sizing: border-box;
    width: 100%;
    height: 30px;
    display: block;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    line-height: 30px;
    font-weight: normal;
    color: #b4b4b4;
    padding: 0 17px 0 25px;
    background-color: #fff;
}

.searchbar .searchbar-cancel {
    width: 2.2rem;
    float: right;
    height: 30px;
    font-size: 14px;
    line-height: 30px;
    text-align: center;
    opacity: 1;
    color: #3d4145;
}

.bottom-to-index {
    position: fixed;
    right: 10px;
    bottom: 60px;
    z-index: 20;
    width: 40px;
    height: 40px;
    background: #fefefe;
    border-radius: 50%;
    text-align: center;
    align-content: center;
    align-items: center;
    line-height: 40px;
    box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);
}

