.alterGradeBox{
	position: fixed;
	top: 0;
	left: 0;
	display: flex;
	align-items: center;
	width: 100%;
	height: 100vh;
	background: rgba(0,0,0,.6);
	z-index: 10000000;
}
.alterGradeBox .alterGrade{
	display: flex;
	flex-direction: column;
	width: 89.33%;
	height: 70vh;
	margin: 0 auto;
}
/* 小学、中学 */
.alterGradeBox .alterGrade .grade{
	position: relative;
	width: 100%;
	height: 210rpx;
	color: #FFFFFF;
}
.alterGradeBox .alterGrade .title{
	position: absolute;
	top: 49rpx;
	left: 0;
	width: 100%;
	text-align: center;
	font-size: 34rpx;
	z-index: 10000;
}
.alterGradeBox .alterGrade .alterBg{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 210rpx;
}
.alterGradeBox .alterGrade .grade .gradeLists{
	position: absolute;
	top: 120rpx;
	left: 0;
	display: flex;
	align-items: center;
	font-size: 30rpx;
	z-index: 10000;
}
.alterGradeBox .alterGrade .grade .gradeLists view{
	height: 60rpx;
	line-height: 60rpx;
	margin: 0 30rpx;
}
.alterGradeBox .alterGrade .grade .gradeLists .bottom{
	border-bottom: 2px solid #FFFFFF;
}
/* 一年级、二年级 */
.h2{
	background: #FFFFFF;
	height: 70rpx;
	line-height: 70rpx;
	padding: 0 0 0 20rpx;
	font-size: 28rpx;
	color: #333333;
}
.alterGradeBox .alterGrade .gradeStep{
	display: flex;
	flex-wrap: wrap;
	width: 100%;
	background: #FFFFFF;
}
.alterGradeBox .alterGrade .gradeStepBtn{
	width: 190rpx;
	height: 64rpx;
	line-height: 64rpx;
	margin: 0 auto;
	color: #666666;
	text-align: center;
	font-size: 26rpx;
	border: 1px solid #E0E0E0;
	border-radius: 32rpx;
}

/* 上学期、下学期 */
.alterGradeBox .alterGrade .gradeStepDate{
	display: flex;
	flex-wrap: wrap;
	background: #FFFFFF;
}
.alterGrade .submitBox{
	width: 100%;
	padding: 70rpx 0 20rpx 0;
	background: #FFFFFF;
}
.alterGrade .submitBox .submitBtn{
	width: 610rpx;
	height: 88rpx;
	line-height: 88rpx;
	margin: 0 auto;
	font-size: 32rpx;
	text-align: center;
	color: #FFFFFF;
	background: #FF4A4A;
	border-radius: 10rpx;
}
/* 下划线（白色） */
.alterGradeBox .alterGrade .activeBorder{
	border-bottom: 4rpx solid #FFFFFF;
}
/* 红色背景 */
.alterGradeBox .alterGrade .activeBg{
	background: #FF4A4A;
	color: #FFFFFF;
}